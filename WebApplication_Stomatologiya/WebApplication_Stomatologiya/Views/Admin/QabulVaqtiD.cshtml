@{
    ViewBag.Title = "QabulVaqti";
}


<form action="/Admin/VaqtSaqlash" method="post">
    <input type="text" value="@ViewBag.sum" id="qiy" hidden="hidden" />
    <br />
    <input type="text" value="@ViewBag.vaqt" name="sana" hidden="hidden" /><br />
    <input type="text" value="@ViewBag.Did" name="Did" hidden="hidden" /><br />
    <input type="text" value="@ViewBag.Id" name="Id" hidden="hidden" /><br />

    <label>Soat</label>
    <select id="combo" style="width:180px;" name="vaqti"></select>
    <input type="submit" value="Saqlash" class="btn btn-success" />
</form>
