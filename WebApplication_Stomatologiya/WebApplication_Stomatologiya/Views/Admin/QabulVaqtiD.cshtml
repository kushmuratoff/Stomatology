<script>

    var qiy = document.getElementById("qiy").value;
    bjoy = 0;
    var select = document.getElementById("combo");
    for (i = 0; i < qiy.length; i++) {
        if (qiy[i] == " ") {
            var suz = qiy.substring(bjoy, i);
            // alert("." + suz + ".");
            bjoy = i + 1;
            select.options[select.options.length] = new Option(suz, suz);
        }
    }
</script>